                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/category"
                        app:layout_constraintTop_toTopOf="@+id/category">

                        <LinearLayout
